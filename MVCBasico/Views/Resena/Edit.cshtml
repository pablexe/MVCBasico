@model MVCBasico.Models.Resena
@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Reseña</h1>

<h3>¿Estás seguro de que quieres editar esta reseña?</h3>
<div>
    <hr />
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="calificacion" class="control-label"></label>
            <input asp-for="calificacion" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="comentario" class="control-label"></label>
            <textarea asp-for="comentario" class="form-control"></textarea>
        </div>
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>